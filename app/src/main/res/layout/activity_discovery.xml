<?xml version="1.0" encoding="utf-8"?>
<LinearLayout 
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <LinearLayout
        android:background="@color/colorPink"
        android:layout_width="match_parent"
        android:layout_height="30dp">

    </LinearLayout>

    <LinearLayout
        android:background="@color/colorPink"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="50dp">

        <EditText
            android:id="@+id/etSousuo"
            android:layout_width="310dp"
            android:layout_height="40dp"
            android:background="@drawable/edittext_normal"
            android:paddingLeft="20dp"
            android:singleLine="true"/>

        <ImageView
            android:id="@+id/ivsousuo"
            android:layout_marginLeft="10dp"
            android:layout_gravity="center"
            android:src="@drawable/ssdk_country_search_icon"
            android:layout_width="28dp"
            android:layout_height="28dp" />

    </LinearLayout>

    <com.youth.banner.Banner
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/banner"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:scaleType="fitXY"/>

    <LinearLayout
        android:gravity="center"
        android:layout_marginTop="5dp"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal">

        <Button
            android:background="@drawable/icon_discovery_category_reviews_logo"
            android:layout_width="58dp"
            android:layout_height="58dp" />

        <Button
            android:background="@drawable/icon_discovery_group_reviews_logo"
            android:layout_marginLeft="15dp"
            android:layout_width="58dp"
            android:layout_height="58dp" />

        <Button
            android:background="@drawable/icon_discovery_top_logo"
            android:layout_marginLeft="15dp"
            android:layout_width="58dp"
            android:layout_height="58dp" />
        <Button
            android:background="@drawable/icon_discovery_category_reviews_logo"
            android:layout_marginLeft="15dp"
            android:layout_width="58dp"
            android:layout_height="58dp" />
        <Button
            android:background="@drawable/icon_discovery_top_logo"
            android:layout_marginLeft="15dp"
            android:layout_width="58dp"
            android:layout_height="58dp" />

    </LinearLayout>

    <ListView
        android:layout_marginTop="5dp"
        android:id="@+id/lv_discovery_list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:divider="@null"
        android:dividerHeight = "0dp">

    </ListView>

</LinearLayout>
