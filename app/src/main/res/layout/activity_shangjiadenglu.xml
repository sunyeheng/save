<LinearLayout android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@drawable/bg2">
    <LinearLayout

        android:paddingTop="150dp"
        android:gravity="center"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.example.lenovo.myapplication.RoundImageView
            android:id="@+id/Buiness_top"
            android:src="@drawable/timg"
            android:layout_width="100dp"
            android:layout_height="100dp">
        </com.example.lenovo.myapplication.RoundImageView>

        <RelativeLayout
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:paddingTop="40dp">

            <EditText

                android:textColor="@android:color/white"
                android:textColorHint="@android:color/white"
                android:id="@+id/Buiness_name"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:background="@drawable/qq_edit_login"
                android:hint="@string/buiness_name"
                android:textStyle="bold" />

            <EditText
                android:textColor="@android:color/white"
                android:textColorHint="@android:color/white"
                android:id="@+id/Buiness_password"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/Buiness_name"
                android:layout_marginTop="20dp"
                android:background="@drawable/qq_edit_login"
                android:hint="@string/buiness_code"
                android:textStyle="bold" />

            <Button
                android:id="@+id/Buiness_login"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/Buiness_password"
                android:layout_marginTop="20dp"
                android:background="@drawable/shape"
                android:text="@string/login"
                android:textColor="@android:color/white" />

            <Button
                android:id="@+id/Buiness_registered"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/Buiness_login"
                android:layout_marginTop="10dp"
                android:background="@drawable/shape"
                android:text="@string/new_registered"
                android:textColor="@android:color/white" />

            <TextView
                android:id="@+id/not_Login"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/Buiness_registered"
                android:layout_marginTop="10dp"
                android:gravity="right"
                android:text="@string/ForgetPassword"
                android:textColor="@android:color/white" />
        </RelativeLayout>

    </LinearLayout>

</LinearLayout>
