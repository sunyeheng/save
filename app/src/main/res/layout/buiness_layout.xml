<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/Business_Image_top"
            android:scaleType="fitXY"
            android:src="@drawable/bg1"
            android:layout_width="match_parent"
            android:layout_height="200dp" />
        <LinearLayout
            android:layout_below="@+id/Business_Image_top"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >
            <TextView
                android:text="通灵鬼校"
                android:padding="10dp"
                android:id="@+id/Business_top_name"
                android:textStyle="bold"
                android:textSize="20dp"
                android:textColor="@android:color/black"
                android:layout_weight="9"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                />
            <ImageButton
                android:id="@+id/add_goods_button"
                android:src="@drawable/add_goods_button"
                android:padding="5dp"
                android:background="@android:color/white"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="40dp" />
        </LinearLayout>
    </RelativeLayout>
    <GridView
        android:id ="@+id/Business_Goods_Gv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:numColumns="3"></GridView>
</LinearLayout>
